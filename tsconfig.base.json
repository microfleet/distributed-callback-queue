{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ESNext",
    "allowJs": false,
    "declaration": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "composite": false,
  },
  "exclude": [
    "**/node_modules/**",
    "lib/**",
    "packages/*/lib/**",
    "dist",
    "packages/*/dist/**",
    "coverage/**"
  ]
}
